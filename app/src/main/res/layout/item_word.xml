<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:padding="16dp"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true"
    android:elevation="2dp"
    android:foreground="?attr/selectableItemBackground">

    <!-- 左边内容 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingEnd="12dp">

        <TextView
            android:id="@+id/word_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="エモい"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/meaning_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="感情が揺さぶられる、懐かしい、センチメンタル"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>

    <!-- 右边内容 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- 收藏按钮 -->
        <ImageView
            android:id="@+id/favorite_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="4dp"
            android:background="@drawable/favorite_icon_background"
            android:src="@drawable/selector_favorite_star"
            android:layout_marginBottom="8dp"
            android:contentDescription="收藏按钮" />

        <!-- 类型徽章 -->
        <TextView
            android:id="@+id/type_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Safe"
            android:textSize="10sp"
            android:textStyle="bold"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:layout_marginBottom="8dp" />

        <!-- 危险等级 -->
        <LinearLayout
            android:id="@+id/danger_level_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
    </LinearLayout>
</LinearLayout>