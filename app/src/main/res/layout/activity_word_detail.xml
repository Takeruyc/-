<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 顶部渐变条 -->
        <LinearLayout
            android:id="@+id/header_gradient"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:background="@drawable/bg_gradient_header"
            android:padding="20dp">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_back"
                android:background="@drawable/circle_bg_white_20"
                android:layout_alignParentEnd="true"
                android:contentDescription="返回" />

            <TextView
                android:id="@+id/word_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="エモい"
                android:textSize="36sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="20dp" />

        </LinearLayout>

        <!-- 单词信息卡片 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginTop="-40dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- 单词基本信息 -->
                <TextView
                    android:id="@+id/reading_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Emoi"
                    android:textColor="@color/gray_dark"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <!-- 类型和危险等级 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/type_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="定番"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:id="@+id/danger_level_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />

                </LinearLayout>

                <!-- 含义 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="意味"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/meaning_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="感情が揺さぶられる、懐かしい、センチメンタル"
                    android:textSize="14sp"
                    android:textColor="@color/gray_dark"
                    android:layout_marginBottom="24dp" />

                <!-- 解释 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="解説"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="4dp"
                    android:drawableStart="@drawable/ic_fire_small"
                    android:drawablePadding="8dp" />

                <TextView
                    android:id="@+id/description_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="「emotional」が由来。景色や音楽、雰囲気に対して感動した時に使う万能な言葉。"
                    android:textSize="14sp"
                    android:textColor="@color/gray_dark"
                    android:paddingStart="4dp"
                    android:layout_marginBottom="24dp" />

                <!-- 对话示例 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/gray_light"
                    android:padding="16dp"
                    android:layout_marginBottom="24dp"
                    android:paddingBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="シチュエーション劇場"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:drawableStart="@drawable/ic_message"
                        android:drawablePadding="8dp"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:id="@+id/dialogue_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                    <Button
                        android:id="@+id/remix_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AI Remix"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@drawable/button_gradient_purple"
                        android:layout_gravity="end"
                        android:layout_marginTop="12dp"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp" />

                </LinearLayout>

                <!-- 操作按钮 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <Button
                        android:id="@+id/play_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="音声を再生"
                        android:textColor="@color/white"
                        android:background="@drawable/button_black"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="12dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>