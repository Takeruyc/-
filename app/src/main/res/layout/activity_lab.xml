<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="56dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 头部 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <!-- 返回按钮（使用系统图标） -->
            <ImageView
                android:id="@+id/back_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_revert"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <!-- 使用纯色文本，不要渐变背景 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI 毒舌鑑定室"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="あなたが使いたい日本語の「ノリ」と「地雷度」をAIが判定します。"
                    android:textSize="12sp"
                    android:textColor="@color/gray"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- API警告（简化背景） -->
        <TextView
            android:id="@+id/warning_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="API Keyが見つかりません。AI功能在模拟模式下运行。"
            android:textSize="12sp"
            android:textColor="@color/yellow_dark"
            android:background="@color/yellow_light"
            android:padding="12dp"
            android:visibility="gone"
            android:layout_marginBottom="16dp" />

        <!-- 输入区域（简化背景） -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:elevation="4dp">

            <EditText
                android:id="@+id/input_edit_text"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="ここに覚えたスラングを使った文章を入力してね... (例: 今日はマジで詰んだわ)"
                android:textSize="18sp"
                android:background="@null"
                android:gravity="top"
                android:maxLines="5"
                android:inputType="textMultiLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/char_count_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0/80"
                    android:textSize="12sp"
                    android:textColor="@color/gray" />

                <Button
                    android:id="@+id/analyze_button"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="鑑定する"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@color/black"
                    android:paddingHorizontal="20dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- 结果区域（简化背景） -->
        <LinearLayout
            android:id="@+id/result_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/purple"
            android:padding="24dp"
            android:visibility="gone"
            android:layout_marginBottom="24dp"
            android:elevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vibe Score"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/white_alpha" />

                    <TextView
                        android:id="@+id/score_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="85点"
                        android:textSize="48sp"
                        android:textStyle="bold"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Danger Lv."
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/white_alpha" />

                    <LinearLayout
                        android:id="@+id/danger_dots_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 反馈区域（简化背景） -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/black_alpha"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✨ アドバイス"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/feedback_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="「マジで」は親しい友達間ならOK！でも、目上の人には「本当に」を使いましょう。"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>

            <!-- Vibe标签（简化背景） -->
            <TextView
                android:id="@+id/vibe_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="雰囲気: カジュアル"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@color/white_alpha"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp" />
        </LinearLayout>

        <!-- 加载指示器 -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="48dp" />

        <!-- 空状态 -->
        <LinearLayout
            android:id="@+id/empty_state"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="visible"
            android:padding="48dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✨"
                android:textSize="48sp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/dangerLevelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="レベル 2"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="8dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>